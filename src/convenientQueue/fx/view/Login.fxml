<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.ScrollPane?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.GridPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.text.Text?>

<GridPane alignment="CENTER" prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/8.0.121" xmlns:fx="http://javafx.com/fxml/1" fx:controller="convenientQueue.fx.controller.LoginController">

    <Label text="Login" GridPane.columnIndex="1" GridPane.rowIndex="1" />
    <TextField fx:id="login" GridPane.columnIndex="2" GridPane.rowIndex="1" />

    <Label text="Password" GridPane.columnIndex="1" GridPane.rowIndex="2" />
    <TextField fx:id="password" GridPane.columnIndex="2" GridPane.rowIndex="2" />

    <HBox alignment="bottom_left" spacing="10" GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button onAction="#login" text="Login" />
    </HBox>

    <ScrollPane GridPane.columnIndex="2" GridPane.rowIndex="4">
        <Text fx:id="dialogText" wrappingWidth="400" />
    </ScrollPane>

</GridPane>
