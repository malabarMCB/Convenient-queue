<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<?import javafx.scene.text.Text?>
<GridPane xmlns="http://javafx.com/javafx"
          xmlns:fx="http://javafx.com/fxml"
          fx:controller="convenientQueue.fx.controller.LoginController"
          prefHeight="400.0" prefWidth="600.0">

    <Label text="Login"  GridPane.columnIndex="1" GridPane.rowIndex="1"/>
    <TextField fx:id="login" GridPane.columnIndex="2" GridPane.rowIndex="1"/>

    <Label text="Password"  GridPane.columnIndex="1" GridPane.rowIndex="2"/>
    <TextField fx:id="password" GridPane.columnIndex="2" GridPane.rowIndex="2"/>

    <HBox spacing="10" alignment="bottom_left"
          GridPane.columnIndex="1" GridPane.rowIndex="3">
        <Button  text="Login"
                 onAction="#login"/>
    </HBox>

    <ScrollPane GridPane.columnIndex="2" GridPane.rowIndex="4">
        <Text wrappingWidth="400" fx:id="dialogText"/>
    </ScrollPane>

</GridPane>
